    },
    "PriRT": {
      "Type": "AWS::EC2::RouteTable",
      "Properties": {
        "VpcId": { "Ref": "DotNetDevVPC" },
        "Tags": [
          {
            "Key": "Name",
            "Value": "Pri-rt"
          }
        ]
