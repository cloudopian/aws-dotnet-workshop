@{
    ViewData["Title"] = "Micro Service Test";
}
@model MyWolfApp.Models.ServiceData
<h1>@ViewData["Title"]</h1>

<form method="post" asp-action="MicroServiceTest" asp-controller="MicroService">
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" asp-for="InputName" placeholder="E.g. John" value=@Model.InputName id="Name" />
        <small id="nameHelp" class="form-text text-muted">Microservices will append some text to this name</small>
    </div>
    <div class="form-group">
        <label for="Age">Age</label>
        <input type="text" class="form-control" asp-for="InputAge" type="number" min="0" max="150" placeholder="E.g. 35" value=@Model.InputAge id="Age" />
        <small id="ageHelp" class="form-text text-muted">Microservices will keep this number unchanged</small>
    </div>
    <div class="form-group">
        <input type="submit" name="Submit" value="Invoke Service" class="btn btn-primary btn-lg" />
    </div>
</form>
<div class="jumbotron">
    <h2>Result</h2>
    <dl class="row">
        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@Model.OutputName</dd>
        <dt class="col-sm-3">Age</dt>
        <dd class="col-sm-9">@Model.OutputAge</dd>
    </dl>
    @if (!string.IsNullOrEmpty(@Model.Error))
    {
        <p class="alert alert-danger"><span>Error</span>: @Model.Error</p>
    }

</div>

